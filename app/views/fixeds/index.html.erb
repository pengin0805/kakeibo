<div class="header">
  <%= link_to "ホーム" ,root_path %>
  <%= link_to "特別費" ,specials_path %>
</div>
<div class="main">
  <h1>＜<%= Date.today.month%>月＞</h1>
  <% unless @variable_cost.errors.any? || @fixed_cost.errors.any?%>
  <%= month_calendar events: @variable_costs_all do |date, variable_costs| %>
    <span class="<%= date%>"><%= date.day %></span>

    <% variable_costs.each do |variable| %>
      <div>
        <%= variable.variable_name %>
        ¥<%= variable.price %>
      </div>
    <% end %>
  <% end %>
  <% end %>
  <h2>＜今月の合計＞</h2>
  <table border="1" width="20%" cellpadding="3" class="week_sum">
    <tr><th><%= Date.today.month-1%>月</th><th><%= Date.today.month%>月</th></tr>
    <tr><td>¥<%= @last_month_sum %></td><td>¥<%= @month_sum %></td></tr>
  </table>
  <h2>＜各週の合計＞</h2>
  <table border="1" cellpadding="3" class="week_sum">
    <tr><th width="10%">第1週</th><th width="10%">第2週</th><th width="10%">第3週</th><th width="10%">第4週</th><th width="10%">第5週</th><th width="10%">第6週</th></tr>
    <tr><td>¥<%= @week1_sum %></td><td>¥<%= @week2_sum %></td><td>¥<%= @week3_sum %></td><td>¥<%= @week4_sum %></td><td>¥<%= @week5_sum %></td><td>¥<%= @week6_sum %></td></tr>
  </table>
  <hr>
  <h2>＜変動費＞</h2>
  <%= form_with model: @variable_cost, url:variables_path, local: true do |f| %>
      <%= render 'shared/error_messages', model: f.object %>

    <div class="form">
      <div class="form_child">
        <div class="fixed_category_id">
          カテゴリー
        </div>
        <%= f.collection_select(:varicate_id,Varicate.all, :id, :name, {},{class:"text"}) %>
      </div>
      <div class="form_child">
        <div class="fixed_id">
          項目
        </div>
        <%= f.text_field :variable_name, class:"text" %>
      </div>
      <div class="form_child">
        <div class="price">
          金額
        </div>
        <%= f.text_field :price, class:"text" %>円
      </div>
      <div class="form_child">
        <div class="price">
          日付
        </div>
        <div class="month">
          <%= f.date_select :start_time %>
        </div>
      </div>
      <div class="form_child">
          <%= f.submit "書き込み" ,class:"btn" %>
      </div>
    </div>
  <% end %>
  <div class="container">
  <% @variable_costs.each_slice(3) do |variable_costs| %>
  <div class="lists">
    <table border="1" width="100%" cellpadding="3">
      <tr><th>日付</th><th>カテゴリー</th><th>項目</th><th>金額</th></tr>
      <% variable_costs.each do |variable| %>
      <tr><td><%= variable.start_time.strftime("%-m月 %d日") %> </td><td><%= variable.varicate.name %></td><td><%= variable.variable_name %></td><td><%= variable.price %></td></tr>
      <% end %>
    </table>
    <table cellpadding="4" width="50px" >
      <tr><th>削除</th></tr>
      <% variable_costs.each do |variable| %>
      <tr><td style="border:none"><%= link_to "削除",variable_path(variable.id), method: :delete %></td></tr>
      <% end %>
    </table>
  </div>
  <% end %>
  </div>
  <h3>・カテゴリー別</h3>
  <%= pie_chart @variable_ratio, donut: true, suffix: "%" %>
  <%= column_chart  @variable_costs.joins(:varicate).group("varicates.name").sum(:price).sort_by { |_, v| v }.reverse.to_h, suffix: "円" %>

  <hr>
  <h2>＜固定費＞</h2>
  <%= form_with model: @fixed_cost, url:fixeds_path, local: true do |f| %>
      <%= render 'shared/error_messages', model: f.object %>

    <div class="form">
      <div class="form_child">
        <div class="fixed_category_id">
          カテゴリー
        </div>
        <%= f.collection_select(:fixecate_id,Fixecate.all, :id, :name, {},{class:"text"}) %>
      </div>
      <div class="form_child">
        <div class="fixed_id">
          項目
        </div>
        <%= f.collection_select(:fixecate_name_id,FixecateName.all, :id, :name, {},{class:"text"}) %>
      </div>
      <div class="form_child">
        <div class="price">
          金額
        </div>
        <%= f.text_field :price, class:"text" %>円
      </div>
      <div class="form_child">
        <div class="price">
          日付
        </div>
        <div class="month">
          <%= f.date_select :month, discard_day: true %>
        </div>
      </div>
      <div class="form_child">
          <%= f.submit "書き込み" ,class:"btn" %>
      </div>
    </div>
  <% end %>
  <div class="container">
  <% @fixed_costs.each_slice(10) do |fixed_costs| %>
  <div class="lists">
    <table border="1" width="100%" cellpadding="3">
      <tr><th>日付</th><th>カテゴリー</th><th>項目</th><th>金額</th></tr>
      <% fixed_costs.each do |fixed| %>
      <tr><td><%= fixed.month.strftime("%-m月 %d日") %> </td><td><%= fixed.fixecate.name %></td><td><%= fixed.fixecate_name.name %></td><td><%= fixed.price %></td></tr>
      <% end %>
    </table>
    <table cellpadding="4" width="50px">
      <tr><th>削除 </th></tr>
      <% fixed_costs.each do |fixed| %>
      <tr><td style="border:none"><%= link_to "削除",fixed_path(fixed.id), method: :delete %></td></tr>
      <% end %>
    </table>
  </div>
  <% end %>
  </div>
  <h3>・カテゴリー別</h3>
  <%= pie_chart @fixed_ratio, donut: true, suffix: "%",colors: [ "#769fcd","#b9d7ea","#d6e6f2","#f7fbfc"], legend: "left"%>
  <%= column_chart  @fixed_costs.joins(:fixecate).group("fixecates.name").sum(:price).sort_by { |_, v| v }.reverse.to_h, suffix: "円" %>
  <h3>・内訳</h3>
  <%= pie_chart @fixed_name_ratio, donut: true, suffix: "%" %>
  <%= column_chart  @fixed_costs.joins(:fixecate_name).group("fixecate_names.name").sum(:price).sort_by { |_, v| v }.reverse.to_h, suffix: "円" %>

</div>




